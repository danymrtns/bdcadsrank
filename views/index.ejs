    <script>

  //Calcul STM TVA Tm et NAP

  var amountInput = document.getElementById("amount");
  var previewDiv = document.getElementById("preview");
  
  amountInput.addEventListener("input", function() {
    var amount = parseFloat(amountInput.value);
  
    if (!isNaN(amount)) {
      var vat = amount * 0.2;
      var totalAmount = amount + vat;
      var monthlyPayment = totalAmount;
  
      var preview = "Montant: " + amount.toFixed(2) + " €<br>";
      preview += "TVA (20%): " + vat.toFixed(2) + " €<br>";
      preview += "Montant total: " + totalAmount.toFixed(2) + " €<br>";
      preview += "Net à payer par mois: " + monthlyPayment.toFixed(2) + " €";
  
      previewDiv.innerHTML = preview;
    } else {
      previewDiv.innerHTML = "";
    }
  });

</script>
